@page
@model ExpenseTracker.Pages.Expenses.IndexModel

<h1>Expenses</h1>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Category</th>
            <th>Description</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Expenses)
        {
            <tr>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.Category</td>
                <td>@item.Description</td>
                <td>@item.Amount.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>