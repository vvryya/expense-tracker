@page
@model ExpenseTracker.Pages.Expenses.IndexModel

<h1>Expenses</h1>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Category</th>
            <th>Description</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Expenses)
        {
            <tr>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.Category</td>
                <td>@item.Description</td>
                <td>@item.Amount.ToString("C")</td>
                <td>
                    <a asp-page="./Update" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>